<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
	
	<selection name="student.result.type">
		<option value="0">Pending</option>
		<option value="1">Pass</option>
		<option value="2">Fail</option>
	</selection>

	<grid name="student-grid" title="Student"
		model="com.axelor.student.db.Student">
		<field name="stdName" />
		<field name="stdPh" />
		<field name="stdAdds" />
		<field name="stdDept" />
		<field name="stdSub" />
	</grid>

	<form model="com.axelor.student.db.StdPhone" title="Phone"
		name="student-phone-form">
		<field name="phoneno"></field>
		<!-- <field name="phonenumber"></field> -->
	</form>


	<form model="com.axelor.student.db.StdDepartment"
		title="Department" name="student-department-form">
		<field name="stdDeptName"></field>
	</form>

	<!-- <grid model="com.axelor.student.db.StdPhone" title="Phones" name="student-phone-grid"> 
		<field name="phoneno"></field> </grid> -->

	<!-- grid-view="student-phone-grid" -->
	<!-- <form model="com.axelor.student.db.StdAddress" title="Address"
		name="student-address-form">
		<field name="stdaddr"></field>
	</form> -->

	<form model="com.axelor.student.db.Student" title="Students"
		name="student-form">
		<panel title="StudentView">
			<field name="stdName" title="Student Name" colSpan="4"></field>
			<field name="stdPh" canNew="true" title="Phone Number" colSpan="4" form-view="student-phone-form"></field>
			<field name="stdDept" colSpan="4" title="Department" canNew="true" form-view="student-department-form"></field>
			<field name="stdAdds" title="Address" colSpan="12" ></field>
			<field name="stdSub" title="Subject" colSpan="12"></field>
			<field name="joinDate" title="Joining Date"></field>
			<field name="result" title="Result"></field>
		</panel>
	</form>

</object-views>